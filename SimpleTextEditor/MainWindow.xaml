<Window x:Class="SimpleTextEditor.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:SimpleTextEditor"
        mc:Ignorable="d"
        Title="MainWindow" Height="350" Width="525">
    <Grid>
        <DockPanel LastChildFill="True">
            <StackPanel DockPanel.Dock="Bottom" Orientation="Horizontal" HorizontalAlignment="Right">
                <Button Margin="10" x:Name="cutBtn" Click="cutBtn_Click">Cut</Button>
                <Button Margin="10" x:Name="copyBtn" Click="copyBtn_Click">Copy</Button>
                <Button Margin="10" x:Name="pasteBtn" Click="pasteBtn_Click">Paste</Button>
            </StackPanel>
            <Border BorderThickness="1" BorderBrush="Black">
            <TextBox Margin="20" x:Name="tb"></TextBox>
            </Border>
        </DockPanel>
    </Grid>
</Window>
